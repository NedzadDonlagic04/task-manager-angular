{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log-.txt",
          "rollingInterval": "Day",
          "retainFileCountLimit": 14,
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:4200"
    ],
    "PolicyName": "AllowFrontend"
  },
  "Jwt": {
    "Issuer": "TaskManager.API",
    "Audience": "TaskManager.SPA",
    "AccessTokenMinutes": 10,
    "RefreshTokenDays": 2
  },
  "BackgroundServices": {
    "TaskDeadlineMonitor": {
      "RunOnStart": true,
      "CheckExpiredDeadlineSeconds": 60
    },
    "RefreshTokenCleanup": {
      "RunOnStart": true,
      "CleanupHours": 6
    }
  }
}
